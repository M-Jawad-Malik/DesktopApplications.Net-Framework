@model BSSED.Models.User

@{
    ViewBag.Title = "Login";
}
<div class="login">
    <div class="container">
        <h2>Login Form</h2>

        <div class="login-form-grids animated wow slideInUp" data-wow-delay=".5s">
            <form action="/admin/Dashborad" method="post">
                @if (TempData["Msg"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade in" data-auto-dismiss role="alert">
                        <h5 style="color:red;margin-bottom:10px;font-size:17px">@TempData["Msg"]</h5>
                    </div>
                }
                <input type="email" placeholder="Email Address" id="Email" name="Email" required=" ">
                <input type="password" placeholder="Password" id="Password" name="Password" required=" ">
                <input type="submit" value="Login">
            </form>
        </div>
    </div>
</div>


